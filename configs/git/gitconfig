# ~/.gitconfig is managed by the dotfiles repository

[user]
    name = Your Name Here
    email = your.email@example.com

[core]
    editor = nvim
    autocrlf = input

[push]
    default = simple
    autoSetupRemote = true

[commit]
    verbose = 1

[log]
    date = auto:human

[color]
    ui = auto

[pull]
    rebase = false

[diff]
    colorMoved = zebra

[merge]
    conflictstyle = diff3

[rerere]
	enabled = true

[column]
	ui = auto

[branch]
	sort = -committerdate

[init]
	defaultBranch = master

[alias]
    last    = log -1 HEAD
    amend   = commit --amend --no-edit
    graph   = log --graph --decorate --oneline --all
    s       = status -s
    st      = status -s
    c       = commit
    ci      = commit
    co      = checkout
    diff    = diff --color-words --ignore-space-at-eol
    ds      = diff --staged
    grep    = grep -iI
    subup   = submodule update --init --recursive
    subpull = submodule update --init --remote
    blame   = blame -w -C -C -C
    p       = push
    fpush   = push --force-with-lease
    ls      = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    lgr     = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short --graph

[includeIf "gitdir:~/work/"]
    path = ~/.gitconfig.work

# Local overrides and secrets (ignored in version control)
[include]
    path = ~/.gitconfig.local
